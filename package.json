{
  "name": "@pitchpro/audio-processing",
  "version": "1.1.1",
  "description": "High-precision pitch detection and audio processing library for web applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core.esm.js",
      "require": "./dist/core.js"
    },
    "./advanced": {
      "import": "./dist/advanced.esm.js",
      "require": "./dist/advanced.js"
    },
    "./utils": {
      "import": "./dist/utils.esm.js",
      "require": "./dist/utils.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:umd": "vite build --config vite.config.umd.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run test/performance.test.ts",
    "test:silence": "node test-silence-detection.js",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/",
    "prepublishOnly": "npm run build && npm test",
    "preview": "vite preview"
  },
  "keywords": [
    "audio",
    "pitch-detection",
    "music",
    "webaudio",
    "typescript",
    "relative-pitch",
    "music-education",
    "mcleod-pitch-method",
    "harmonic-correction",
    "microphone-control"
  ],
  "author": "PitchPro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiyopi/pitchpro-audio-processing.git"
  },
  "bugs": {
    "url": "https://github.com/kiyopi/pitchpro-audio-processing/issues"
  },
  "homepage": "https://github.com/kiyopi/pitchpro-audio-processing#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "jsdom": "^23.0.0",
    "rollup": "^4.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "pitchy": "^4.1.0"
  }
}
